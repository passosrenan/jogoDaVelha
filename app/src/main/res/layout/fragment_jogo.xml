<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentJogo">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout

        android:id="@+id/LinearJ_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:textColor="@color/text"
            android:width="0dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:text="@string/jogador1" />

        <TextView
            android:id="@+id/text_view2"
            android:layout_width="0dp"
            android:textColor="@color/text"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="2dp"
            android:textStyle="bold"
            android:text="0"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearJ_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearJ_1">

        <TextView
            android:id="@+id/text_view3"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:padding="10dp"
            android:text="@string/jogador2" />

        <TextView
            android:id="@+id/text_view4"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="10dp"
            android:text="0"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_Velha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearJ_2">

        <TextView
            android:id="@+id/text_viewVelha"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:padding="10dp"
            android:text="Velha" />

        <TextView
            android:id="@+id/text_velha2"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="10dp"
            android:textColor="@color/red"
            android:text="0"
            android:textAlignment="center" />


    </LinearLayout>



 <TableLayout
     android:layout_marginTop="50dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintTop_toBottomOf="@id/LinearJ_2">

     <TableRow
         android:layout_width="match_parent"
         android:weightSum="3"
         android:layout_height="wrap_content">

         <Button
             android:id="@+id/bt00"
             android:textColor="@color/button"
             android:layout_margin="5dp"
             android:layout_width="wrap_content"
             android:layout_height="150dp"
             android:textSize="50dp"
             android:layout_weight="1"/>

         <Button
             android:id="@+id/bt01"
             android:textColor="@color/button"
             android:layout_margin="5dp"
             android:layout_width="wrap_content"
             android:textSize="50dp"
             android:layout_height="150dp"
             android:layout_weight="1"/>

         <Button
             android:id="@+id/bt02"
             android:layout_margin="5dp"
             android:textColor="@color/button"
             android:layout_width="wrap_content"
             android:textSize="50dp"
             android:layout_height="150dp"
             android:layout_weight="1"/>




     </TableRow>

     <TableRow
         android:layout_width="match_parent"
         android:weightSum="3"
         android:layout_height="wrap_content">

         <Button
             android:id="@+id/bt10"
             android:layout_margin="5dp"
             android:layout_width="wrap_content"
             android:textSize="50dp"
             android:textColor="@color/button"
             android:layout_height="150dp"
             android:layout_weight="1"/>

         <Button
             android:id="@+id/bt11"
             android:layout_margin="5dp"
             android:layout_width="wrap_content"
             android:textSize="50dp"
             android:layout_height="150dp"
             android:textColor="@color/button"
             android:layout_weight="1"/>

         <Button
             android:id="@+id/bt12"
             android:layout_margin="5dp"
             android:layout_width="wrap_content"
             android:textSize="50dp"
             android:textColor="@color/button"
             android:layout_height="150dp"
             android:layout_weight="1"/>

     </TableRow>

     <TableRow
         android:layout_width="match_parent"
         android:weightSum="3"
         android:layout_height="wrap_content">

         <Button
             android:id="@+id/bt20"
             android:layout_margin="5dp"
             android:layout_width="wrap_content"
             android:textSize="50dp"
             android:textColor="@color/button"
             android:layout_height="150dp"
             android:layout_weight="1"/>

         <Button
             android:id="@+id/bt21"
             android:layout_margin="5dp"
             android:layout_width="wrap_content"
             android:textSize="50dp"
             android:layout_height="150dp"
             android:textColor="@color/button"
             android:layout_weight="1"/>

         <Button
             android:id="@+id/bt22"
             android:layout_margin="5dp"
             android:layout_width="wrap_content"
             android:textSize="50dp"
             android:textColor="@color/button"
             android:layout_height="150dp"
             android:layout_weight="1"/>



     </TableRow>






 </TableLayout>








</androidx.constraintlayout.widget.ConstraintLayout>






